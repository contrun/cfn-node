meta {
  name: generate a few blocks
  type: http
  seq: 11
}

post {
  url: {{CKB_RPC_URL}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "id": 42,
    "jsonrpc": "2.0",
    "method": "generate_block",
    "params": []
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  // Average block time is 8s in the test net. We requires 4 confirmations.
  // Theoritically, 60 seconds should be enough. But I find
  // 120 seconds is more reliable.
  await new Promise(r => setTimeout(r, 120 * 1000));
}
